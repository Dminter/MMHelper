<?xml version="1.0" encoding="utf-8"?>

<com.dexafree.materialList.card.CardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        style="@style/Material_Card_View"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/Material_Card_Title"
                android:padding="@dimen/small_padding"
                android:paddingBottom="0dp"
                android:singleLine="true"
                android:textSize="16sp"
                tools:text="Title"/>

            <TextView
                android:id="@+id/subtitle"
                style="@style/Material_Card_Subtitle_16dp"
                android:padding="@dimen/small_padding"
                android:visibility="gone"
                tools:text="Subtitle"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/small_padding"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:adjustViewBounds="true"
                    android:background="@color/cardview_light_background"
                    android:contentDescription="@null"

                    android:scaleType="centerCrop"/>


                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                          xmlns:tools="http://schemas.android.com/tools"
                          android:id="@+id/supportingText"
                          style="@style/Material_Card_Supporting_Text_16dp"
                          android:padding="@dimen/small_padding"
                          android:singleLine="true"
                          android:text="说的方法反反复复反复反复反复反复反复反复反复反复反复反复反复反复"
                    />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.dexafree.materialList.card.CardLayout>